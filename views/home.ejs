<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Home Page</title>
  <style>
    body {
      background: #0f0f0f;
      font-family: 'Segoe UI', sans-serif;
      color: #f8f9fa;
    }

    .section-heading {
      font-size: 2.5rem;
      font-weight: bold;
      text-align: center;
      margin: 40px 0 30px;
      color: #f72585;
      text-shadow: 0 0 10px rgba(247, 37, 133, 0.5);
    }

    .card {
      background: rgba(26, 26, 26, 0.7);
      border: none;
      border-radius: 20px;
      overflow: hidden;
      transform: translateY(50px);
      opacity: 0;
      transition: transform 0.6s ease, opacity 0.6s ease;
      box-shadow: 0 0 12px rgba(247, 37, 133, 0.1);
      backdrop-filter: blur(10px);
    }

    .card-img-top {
      height: 180px;
      object-fit: cover;
      border-bottom: 2px solid #f72585;
    }

    .card-title {
      font-size: 1.3rem;
      font-weight: 600;
      color: #f8f9fa;
      margin-bottom: 10px;
    }

    .btn-primary {
      background-color: #f72585;
      border: none;
      border-radius: 30px;
      font-weight: bold;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #c41267;
      box-shadow: 0 0 10px #f72585;
    }

    .container {
      padding-bottom: 50px;
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container">
    <h2 class="section-heading">ðŸ“° Latest Blogs</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% blogs.forEach(blog => { %>
        <div class="col blog-card">
          <div class="card h-100">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('./partials/scripts') %>

  <!-- GSAP CDN for animations -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script>
    // Animate cards on load like Framer Motion
    gsap.to(".blog-card .card", {
      y: 0,
      opacity: 1,
      duration: 1,
      stagger: 0.2,
      ease: "power3.out"
    });
  </script>
</body>
</html>
